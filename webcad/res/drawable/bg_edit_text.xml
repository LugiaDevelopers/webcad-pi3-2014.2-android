<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
 
    <!-- cor de fundo do componente -->
    <solid
        android:color="#FFFFFF" >
    </solid>
 
    <!-- espessura e cor da borda -->
    <stroke
        android:width="2dp"
        android:color="#228B22" >
    </stroke>
 
    <!-- Espaçamento em relação a esquerda, topo,
    direita e base -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"    >
    </padding>
 
    <!-- Raio da quina da borda 
    <corners
        android:radius="10dp"   >
    </corners> -->
 
</shape>